{
    "name": "Vocab Go",
    "description": "Build an Extension!",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_icon": {
          "16": "16.png",
          "32": "32.png",
          "64": "64.png",
          "128": "128.png"
        },

        "default_popup": "index.html",
        "default_title": "Vocab Go"
        
    },

    "externally_connectable": {
        "ids": ["fepopbgajpglddmoflgpdddlfamebkfe"],
        "matches": ["<all_urls>"]
    },

    "icons" : {
        "16": "16.png",
        "32": "32.png",
        "64": "64.png",
        "128": "128.png"
    },
    
    "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "Open the popup with word definitions"
    }
  },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],

    "accepts_tls_channel_id": false,

    "background": {
        "service_worker": "background.js"
    },
    
    "permissions": ["storage", "activeTab", "declarativeContent", "https://api.dictionaryapi.dev/api/v2/entries/en/", "https://dictionaryapi.dev/"]
    
}

